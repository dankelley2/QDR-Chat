QListWidget {
    padding: 5px;
}

QListWidget::item {
    color: #ffffff;
    border-radius: 0px;
    padding: 8px;
    margin: 0
}

QListWidget::item:hover {
    background-color: rgb(45, 45, 51);
    border-radius: 5px;
}

QListWidget::item:pressed {
    background-color: rgb(52, 53, 65);
    border-radius: 5px;
}

QListWidget::item:selected {
    background-color: rgb(52, 53, 65);
    border-radius: 5px;
}

QListWidget:focus {
    outline: none;
}

